{% block body %}
    <div class="container">
        <h1 class="text-center"><center>Liste des produits</center></h1>
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="table-responsive">
                    <style>
                        /* Styles personnalisés pour le tableau */
                        table {
                            width: 100%;
                            border-collapse: collapse;
                        }
                        th, td {
                            padding: 10px;
                            text-align: center;
                        }
                        th {
                            background-color: #343a40;
                            color: white;
                        }
                        tbody tr:nth-child(even) {
                            background-color: #f2f2f2;
                        }
                    </style>
                    <table class="table table-bordered table-striped">
                        <thead class="thead-dark">
                            <tr>
                                <th>Id</th>
                             <th>Titre</th>
                             <th>Description</th>
                             <th>prix</th>
                            </tr>
                        </thead>
                        <tbody>
                              {% for product in product %}
                                <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.titre }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.prix }}</td>
                <td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="8" class="text-center">Aucune opération disponible.</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}